<%= link_to "< All Players", players_path %>

<section class="container">
  <header>
    <h2><%= object.new_record? ? "New Player" : "Edit Player" %></h2>
  </header>

  <%= render partial: "shared/validate", locals: { object: object } %>

  <%= form_for object do |f| %>
    <table>
      <tr>
        <th><%= f.label :title %></th>
        <td><%= f.text_field :title %></td>
      </tr>

      <tr>
        <th><%= f.label :level %></th>
        <td><%= f.text_field :level %></td>
      </tr>

      <tr>
        <th><%= f.label :chunk_id %></th>
        <td><%= f.text_field :chunk_id %></td>
      </tr>

      <tr>
        <th><%= f.label :chunk_x %></th>
        <td><%= f.text_field :chunk_x %></td>
      </tr>

      <tr>
        <th><%= f.label :chunk_y %></th>
        <td><%= f.text_field :chunk_y %></td>
      </tr>
    </table>

    <footer>
      <%= f.submit(object.new_record? ? "Create" : "Update", class: "button ok") %>
    </footer>
  <% end %>
</section>
